@page
@model App.EndPoints.UI.RazorPages.Areas.Admin.Pages.IndexModel
@{
    Layout = "Shared/_AdminLayout";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

<div class="container mt-5">
    <div class="row">
        <!-- Box 1: تعداد مشتریان -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary shadow">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill fa-3x"></i>
                    <h5 class="card-title mt-3">تعداد مشتریان</h5>
                    <p class="card-text display-6">@Model.CustomerCount</p>
                </div>
            </div>
        </div>

        <!-- Box 2: تعداد کارشناسان -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success shadow">
                <div class="card-body text-center">
                    <i class="bi bi-person-check-fill fa-3x"></i>
                    <h5 class="card-title mt-3">تعداد کارشناسان</h5>
                    <p class="card-text display-6">@Model.ExpertCount</p>
                </div>
            </div>
        </div>

        <!-- Box 3: تعداد دسته بندی‌های اصلی -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info shadow">
                <div class="card-body text-center">
                    <i class="bi bi-folder-fill fa-3x"></i>
                    <h5 class="card-title mt-3">دسته بندی‌های اصلی</h5>
                    <p class="card-text display-6">@Model.MainCategoryCount</p>
                </div>
            </div>
        </div>

        <!-- Box 4: تعداد زیر دسته بندی‌ها -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning shadow">
                <div class="card-body text-center">
                    <i class="bi bi-folder-symlink-fill fa-3x"></i>
                    <h5 class="card-title mt-3">زیر دسته بندی‌ها</h5>
                    <p class="card-text display-6">17@* @Model.SubCategoryCount *@</p>
                </div>
            </div>
        </div>

        <!-- Box 5: تعداد سرویس‌ها -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-danger shadow">
                <div class="card-body text-center">
                    <i class="bi bi-gear-fill fa-3x"></i>
                    <h5 class="card-title mt-3">تعداد سرویس‌ها</h5>
                    <p class="card-text display-6">12@* @Model.ServiceCount *@</p>
                </div>
            </div>
        </div>

        <!-- Box 6: تعداد کامنت‌ها -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-secondary shadow">
                <div class="card-body text-center">
                    <i class="bi bi-chat-left-dots-fill fa-3x"></i>
                    <h5 class="card-title mt-3">تعداد کامنت‌ها</h5>
                    <p class="card-text display-6">12@* @Model.CommentCount *@</p>
                </div>
            </div>
        </div>

        <!-- Box 7: تعداد درخواست‌ها -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-dark shadow">
                <div class="card-body text-center">
                    <i class="bi bi-hand-index-thumb-fill fa-3x"></i>
                    <h5 class="card-title mt-3">تعداد درخواست‌ها</h5>
                    <p class="card-text display-6">12@* @Model.RequestCount *@</p>
                </div>
            </div>
        </div>

        <!-- Box 8: تعداد پیشنهادات -->
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-light shadow text-dark">
                <div class="card-body text-center">
                    <i class="bi bi-lightbulb-fill fa-3x"></i>
                    <h5 class="card-title mt-3">تعداد پیشنهادات</h5>
                    <p class="card-text display-6">15@* @Model.OfferCount *@</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (Optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>