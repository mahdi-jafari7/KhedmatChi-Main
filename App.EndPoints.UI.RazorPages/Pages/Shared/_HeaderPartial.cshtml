<!-- Modernized Top Header with User Avatar & Enhanced UI/UX -->
<!-- ============================================================== -->
<!-- Start Navigation -->


<div class="header header-light dark-text shadow-sm position-relative">
    <div class="container">
        <nav id="navigation" class="navigation navigation-landscape">
            <div class="nav-header d-flex align-items-center justify-content-between">
                <a class="nav-brand" href="#">
                    <a asp-page="Index"><img src="/assets/img/logo4.jpg" class="logo" alt="Brand Logo" /></a>
                </a>
                <div class="nav-toggle"></div>
                
            </div>
            <div class="nav-menus-wrapper d-flex justify-content-between align-items-center" style="transition: none;">
                <ul class="nav-menu d-flex align-items-center">
                    <li class="active">
                        <a asp-page="Index" class="nav-link">صفحه اصلی</a>
                    </li>
                    @if (User.IsInRole("Customer"))
                    {
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">پنل کاربری</a>
                            <ul class="dropdown-menu shadow-sm">
                                <li><a asp-page="MyRequests" class="dropdown-item"><i class="lni lni-files ms-2"></i>آگهی های من</a></li>
                                <li><a asp-page="Index" class="dropdown-item"><i class="lni lni-add-files ms-2"></i>افزودن آگهی</a></li>
                                <li><a asp-page="Profile" class="dropdown-item"><i class="lni lni-user ms-2"></i>حساب من</a></li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("Expert"))
                    {
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">پنل کاربری</a>
                            <ul class="dropdown-menu shadow-sm">
                                <li><a asp-page="MyProposals" class="dropdown-item"><i class="lni lni-files ms-2"></i>پیشنهادهای من</a></li>
                                <li><a asp-page="Requests" class="dropdown-item"><i class="lni lni-files ms-2"></i>لیست درخواست‌ها</a></li>
                                <li><a asp-page="Profile" class="dropdown-item"><i class="lni lni-user ms-2"></i>حساب من</a></li>
                                <li><a asp-page="ExpertComment" class="dropdown-item"><i class="lni lni-user ms-2"></i>نمایش تمام کامنت ها</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                <ul class="nav-menu nav-menu-social align-to-left d-flex align-items-center">
                    <li class="nav-item">
                        <a href="#" class="nav-link d-flex align-items-center">
                            @* <img src="@Model.CustomerProfileDetails.ProfileImageUrl" alt="User Avatar" class="rounded-circle" width="40" height="40" />  *@
                            @* <span class="ms-2">پروفایل من</span> *@
                        </a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </nav>
    </div>
</div>

<style>
    .logo {
        height: 50px;
        width: auto;
        max-height: 100%;
    }

    .nav-menu .nav-link {
        transition: all 0.3s ease-in-out;
    }

    .nav-menu .nav-link:hover {
        color: #dc3545 !important;
    }

    .dropdown-menu {
        border-radius: 10px;
        overflow: hidden;
    }

    .nav-item img {
        border: 2px solid #dc3545;
    }

    .nav-brand {
        display: flex;
        align-items: center;
        height: 100%;
    }</style>
